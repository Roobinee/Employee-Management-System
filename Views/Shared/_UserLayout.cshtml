<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">

            <div class="sidenav">
                <a style="color: #fff;">XTRACHEF</a>
                <li>@Html.ActionLink("Home", "Welcome", "User")</li>
                <li>@Html.ActionLink("View", "ViewEmployees", "User")</li>
                <li>@Html.ActionLink("Logout", "Index", "Home")</li>
            </div>
        </nav>
    </header>
    <div class="container" style="margin-left: 201px;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
<style>
    .sidenav {
        height: 100%;
        width: 180px;
        position: fixed;
        z-index: 1;
        top: 0;
        left: 0;
        background-color: grey;
        overflow-x: hidden;
        padding-top: 20px;
    }

        .sidenav a {
            padding: 6px 6px 6px 32px;
            text-decoration: none;
            font-size: 25px;
            color: White;
            display: block;
        }

            .sidenav a:hover {
                color: #c5c6d0;
            }

    .main {
        margin-left: 200px;
    }
</style>
